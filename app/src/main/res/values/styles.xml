<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Background -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <!-- EditText Top And Bottom Theme -->
    <style name="topEdTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edittext_top</item>
    </style>

    <style name="bottomEdTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edittext_bottom</item>
    </style>

    <!-- BUttons -->
    <style name="buttonTheme" parent="Widget.AppCompat.Button" >
        <item name="android:background">@drawable/bg_button</item>
    </style>

</resources>